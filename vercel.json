{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/crons/sync_mqtt",
      "dest": "api/crons/sync_mqtt.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/crons/sync_mqtt",
      "schedule": "* * * * *"
    }
  ]
}